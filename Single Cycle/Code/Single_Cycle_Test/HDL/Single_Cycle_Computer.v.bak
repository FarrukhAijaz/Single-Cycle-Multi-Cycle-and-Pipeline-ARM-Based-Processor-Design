// Instantiate DataPath module
DataPath datapath (
    .clk(clk),
    .PCSrc(PCSrc),
    .BX_ctrl(BX_ctrl),
    .RegSrc(RegSrc),
    .BL_ctrl(BL_ctrl),
    .Move_ctrl(Move_ctrl),
    .ALUSrc(ALUSrc),

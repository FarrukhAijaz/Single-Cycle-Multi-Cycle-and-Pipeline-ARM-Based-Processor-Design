    .MemWrite(MemWrite),
    .ALUControl(ALUControl),
    .ImmSrc(ImmSrc),
    .RegWrite(RegWrite),
    .RESET(RESET),
    .Cond(Cond),
    .Op(Op),
    .Funct(Funct),
    .Rd(Rd),
    .Switches(SW),
    .HEX_Debug(HEX_Debug)
);

// Instantiate Controller module
Controller controller (
    .clk(clk),
    .RESET(RESET),
    .Instr(Instr),
    .ALUFlags(ALUFlags),
    .PCSrc(PCSrc),
    .MemtoReg(MemtoReg),
    .MemWrite(MemWrite),
    .ALUControl(ALUControl),
    .ALUSrc(ALUSrc),
    .ImmSrc(ImmSrc),
    .RegWrite(RegWrite),
    .RegSrc(RegSrc),
    .FlagW(FlagW),
    .BX_ctrl(BX_ctrl)
);

// Connect any additional input/output ports here

endmodule
